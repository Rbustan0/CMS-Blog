<div class="posts-list">
{{#if logged_in}}
  {{#each posts as |post|}}
  <div class="post">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>{{post.content}}</p>

  </div>
    {{/each}}
  {{else}}
    {{#each posts as |post|}}
      <h2>{{post.title}}</h2>
      <p>{{post.content}}</p>
      <p>Please log in to add a comment</p>
    {{/each}}
  {{/if}}

  {{#unless logged_in}}
  <div class="not-logged-in">
    <h2>Log in or Sign up here to join in!</h2>
    <div class="buttons">
      <a href="/login" class="btn btn-primary">Join Us!</a>
    </div>
  </div>
  {{/unless}}
</div>